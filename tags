local TextChatService = game:GetService("TextChatService")
 
-- Owner and Admin Usernames
local OwnerUsernames = {"mrpizzaman987", "happymanslashsad"}
local AdminUsernames = {"Admin1", "Admin2"}
 
-- Tag Colors
local OwnerColor1 = "rgb(255, 0, 0)"
local OwnerColor2 = "rgb(0, 255, 0)"
local AdminColor1 = "rgb(0, 0, 255)"
local AdminColor2 = "rgb(255, 165, 0)"
 
TextChatService.OnIncomingMessage = function(Message)
    local Player = game.Players:GetPlayerByUserId(Message.TextSource.UserId)
 
    if Player then
        -- Owner Tags
        if table.find(OwnerUsernames, Player.Name) then
            if Player.Name == OwnerUsernames[1] then
                local OwnerTag = "[Ownerüõ†Ô∏è] "
                local OwnerColoredTag = "<font color='" .. OwnerColor1 .. "'>" .. OwnerTag .. "</font>"
                Message.PrefixText = OwnerColoredTag .. Message.PrefixText
            elseif Player.Name == OwnerUsernames[2] then
                local OwnerTag = "[Owner2üõ†Ô∏è] "
                local OwnerColoredTag = "<font color='" .. OwnerColor2 .. "'>" .. OwnerTag .. "</font>"
                Message.PrefixText = OwnerColoredTag .. Message.PrefixText
            end
 
        -- Admin Tags
        elseif table.find(AdminUsernames, Player.Name) then
            if Player.Name == AdminUsernames[1] then
                local AdminTag = "[Co-Owner] "
                local AdminColoredTag = "<font color='" .. AdminColor1 .. "'>" .. AdminTag .. "</font>"
                Message.PrefixText = AdminColoredTag .. Message.PrefixText
            elseif Player.Name == AdminUsernames[2] then
                local AdminTag = "[Admin2üî•] "
                local AdminColoredTag = "<font color='" .. AdminColor2 .. "'>" .. AdminTag .. "</font>"
                Message.PrefixText = AdminColoredTag .. Message.PrefixText
            end
        end
    end
end

local TextChatService = game:GetService("TextChatService")

-- Owner and Admin Usernames
local OwnerUsernames = {"Owner1", "Owner2"}
local AdminUsernames = {"Admin1", "Admin2"}

-- Tag Colors (use hex codes)
local OwnerColor1 = "#FF0000"
local OwnerColor2 = "#00FF00"
local AdminColor1 = "#0000FF"
local AdminColor2 = "#FFA500"

TextChatService.OnIncomingMessage = function(message)
    local player = nil
    if message.TextSource then
        player = game.Players:GetPlayerByUserId(message.TextSource.UserId)
    end

    if player then
        local props = Instance.new("TextChatMessageProperties")

        -- Owner Tags
        if table.find(OwnerUsernames, player.Name) then
            if player.Name == OwnerUsernames[1] then
                props.PrefixText = "<font color='" .. OwnerColor1 .. "'>[Owner1üõ†Ô∏è]</font> " .. message.PrefixText
            elseif player.Name == OwnerUsernames[2] then
                props.PrefixText = "<font color='" .. OwnerColor2 .. "'>[Owner2üõ†Ô∏è]</font> " .. message.PrefixText
            end

        -- Admin Tags
        elseif table.find(AdminUsernames, player.Name) then
            if player.Name == AdminUsernames[1] then
                props.PrefixText = "<font color='" .. AdminColor1 .. "'>[Admin1üî•]</font> " .. message.PrefixText
            elseif player.Name == AdminUsernames[2] then
                props.PrefixText = "<font color='" .. AdminColor2 .. "'>[Admin2üî•]</font> " .. message.PrefixText
            end
        end

        return props
    end
end
